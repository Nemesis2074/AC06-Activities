<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/bg_dragon_ball"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp" app:srcCompat="@drawable/goku"
            android:id="@+id/goku"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="9:16" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>